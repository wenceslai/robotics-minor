<?xml version="1.0"?>
<sdf version="1.6">
  <model name="greenhouse_robot">
    <!-- Robot's body -->
    <link name="base_link">
      <collision name="collision">
        <geometry>
          <box>
            <size>0.7 0.3 0.25</size> <!-- Robot size: 70x30x25cm -->
          </box>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <box>
            <size>0.7 0.3 0.25</size>
          </box>
        </geometry>
        <material>
          <ambient>0.8 0.8 0.8 1</ambient> <!-- Light grey material -->
        </material>
      </visual>
    </link>

    <!-- Wheels -->
    <!-- Assuming a special wheel design for driven wheels -->
    <link name="front_left_wheel">
      <collision name="collision">
        <geometry>
          <mesh>
            <uri>model://robot_model/meshes/front_left_wheel.obj</uri> <!-- Your custom wheel mesh -->
          </mesh>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <mesh>
            <uri>model://robot_model/meshes/front_left_wheel.obj</uri>
          </mesh>
        </geometry>
      </visual>
      <joint name="front_left_wheel_joint" type="revolute">
        <parent>base_link</parent>
        <child>front_left_wheel</child>
        <axis>
          <xyz>0 0 1</xyz>
        </axis>
        <limit>
          <lower>-10</lower>
          <upper>10</upper>
        </limit>
        <dynamics>
          <damping>0.5</damping>
        </dynamics>
        <pose>0.35 0.15 0 0 0 0</pose> <!-- Position of the wheel -->
      </joint>
    </link>

    <!-- Other wheel and actuators (similarly for other wheels) -->

    <!-- Sensors and actuators -->
    <!-- Add any additional sensors or actuators like cameras, laser, motors, etc. -->

  </model>
</sdf>
